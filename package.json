{
  "name": "bus",
  "version": "0.1.0",
  "description": "Bus pour microservice",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "pm2-runtime start ecosystem.config.js --env production",
    "dev": "concurrently -k -n \"Typescript,NodeJS\" -p \"[{name}]\" -c \"blue,green\" \"tsc --watch\" \"nodemon dist/index.js\"",
    "test": "nyc mocha",
    "cover": "tsc && nyc mocha && nyc report --reporter=text-lcov | coveralls",
    "format": "prettier --write src/**/*.ts",
    "lint": "tslint -c tslint.json src/**/*.ts",
    "clean": "npm run format && npm run lint",
    "doc:src": "typedoc --out docs/code ./src",
    "doc:rtd": ".\\docs\\rtd\\make html",
    "doc": "concurrently -k -n \"doc:src,doc:rtd\" -p \"[{name}]\" -c \"blue,green\" \"npm run doc:src\" \"npm run doc:rtd\""
  },
  "keywords": [
    "Bus",
    "microservice"
  ],
  "author": "Cyril POIDEVIN <vilsafur@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/chai": "^4.2.7",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.24",
    "@types/uuid": "^3.4.6",
    "chai": "^4.2.0",
    "concurrently": "^4.1.2",
    "coveralls": "^3.0.9",
    "husky": "^4.0.0",
    "istanbul": "^0.4.5",
    "lint-staged": "^9.5.0",
    "mocha": "^6.2.2",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.19.4",
    "nyc": "^14.1.1",
    "prettier": "^1.19.1",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.6.2",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-no-unused-expression-chai": "^0.1.4",
    "typedoc": "^0.15.8",
    "typescript": "^3.7.4"
  },
  "dependencies": {
    "@types/bluebird": "^3.5.29",
    "@types/express": "^4.17.2",
    "@types/mysql": "^2.15.8",
    "@types/sequelize": "^4.28.8",
    "@types/validator": "^12.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "module-alias": "^2.2.2",
    "mysql2": "^2.1.0",
    "pm2": "^4.2.1",
    "sequelize": "^5.21.3",
    "sqlite3": "^4.1.1",
    "uuid": "^3.3.3",
    "winston": "^3.2.1"
  },
  "_moduleAliases": {
    "@": "dist"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  }
}
