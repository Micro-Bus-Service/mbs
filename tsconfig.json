{
  "compilerOptions": {
      "outDir": "dist",
      "target": "es6",
      "strict": true,
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "typeRoots" : [
        "./node_modules/@types/",
        "../node_modules/@types/",
        "../../node_modules/@types/",
        "./src/types"
      ]
  },
  "include": [
      "src/**/*"
  ]
}