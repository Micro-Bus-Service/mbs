{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "target": "es6",
    "strict": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
  },
  "include": [
      "src/**/*.ts",
      "package.json"
  ],
  "exclude": [
    "node_modules",
  ]
}